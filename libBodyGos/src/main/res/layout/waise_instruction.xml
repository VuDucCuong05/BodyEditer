<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/border_radius__dark_grey_10">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:padding="10.0dip">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/boobs"
                android:layout_width="300.0dip"
                android:layout_height="250.0dip"
                android:layout_centerHorizontal="true"
                android:adjustViewBounds="true"
                android:src="@drawable/body_waist" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="50.0dip"
                android:layout_below="@id/boobs" />
        </RelativeLayout>

        <TextView
            android:id="@+id/btnDone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center"
            android:layout_marginTop="5.0dip"
            android:layout_marginEnd="10.0dip"
            android:layout_marginBottom="10.0dip"
            android:background="@drawable/piclist_selector_btn_done"
            android:gravity="center"
            android:paddingStart="30.0dip"
            android:paddingTop="5.0dip"
            android:paddingEnd="30.0dip"
            android:paddingBottom="5.0dip"
            android:text="Got It"
            android:textColor="@color/white"
            android:textSize="14.0sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>